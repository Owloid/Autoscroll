{
  "name": "Autoscroll",
  "version": "0.1.0.0",
  "description": "Make the current page automatically scroll down",

  "browser_action": {
    "default_title": "Scroll"
  },

  "background": {
    "scripts": [
      "shared/scriptExecution.js",
      "background/background.js"
    ],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "contextMenus"
  ],

  "manifest_version": 2
}
