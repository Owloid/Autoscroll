{
  "manifest_version": 2,
  "name": "Autoscroll",
  "version": "0.0.0.2",

  "default_locale": "en",
  "description": "Make the current page automatically scroll down",

  "browser_action": {
    "default_title": "Scroll"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab"
  ]
}
