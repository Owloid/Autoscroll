{
  "name": "Autoscroll",
  "version": "0.0.3.2",
  "description": "Make the current page automatically scroll down",

  "browser_action": {
    "default_title": "Scroll"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab"
  ],

  "manifest_version": 2
}
