{
  "manifest_version": 2,
  "name": "Autoscroll",
  "version": "0.0.3.0",

  "description": "Make the current page automatically scroll down",

  "browser_action": {
    "default_title": "Scroll"
  },

  "background": {
    "scripts": ["backgroundLoader.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab"
  ]
}
